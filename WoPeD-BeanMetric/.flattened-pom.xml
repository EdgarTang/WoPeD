<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.woped</groupId>
    <artifactId>WoPeD</artifactId>
    <version>3.7.1</version>
  </parent>
  <groupId>org.woped</groupId>
  <artifactId>WoPeD-BeanMetric</artifactId>
  <version>3.7.1</version>
  <dependencies>
    <dependency>
      <groupId>org.apache.xmlbeans</groupId>
      <artifactId>xmlbeans</artifactId>
      <version>2.4.0</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>xmlbeans-maven-plugin</artifactId>
        <version>2.3.2</version>
        <executions>
          <execution>
            <phase>install</phase>
            <goals>
              <goal>xmlbeans</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <schemaDirectory>src/main/java/org/woped/beanmetric</schemaDirectory>
          <verbose>false</verbose>
          <quiet>false</quiet>
          <javaSource>1.8</javaSource>
          <outputJar>${project.build.directory}/metricsBeans-${project.version}.jar</outputJar>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <version>3.0.0-M1</version>
        <executions>
          <execution>
            <phase>install</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <generatePom>true</generatePom>
          <file>${project.build.directory}/metricsBeans-${project.version}.jar</file>
          <groupId>org.woped</groupId>
          <artifactId>metricsBeans</artifactId>
          <version>${project.version}</version>
          <packaging>jar</packaging>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
