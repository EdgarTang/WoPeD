<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">
    <skipIfNotSupported/>
    <programGroup defaultName="WoPeD" location="applications"/>
    <shortcut
            name="WoPeD"
            target="$INSTALL_PATH/WoPeD-Starter.jar"
            commandLine=""
            workingDirectory="$INSTALL_PATH"
            description="Start WoPeD - The Workflow Petrinet Designer"
            iconFile="$INSTALL_PATH/WoPeD.png"
            iconIndex="0"
            initialState="normal"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="no"
            startup="no"
            type="Application"
            encoding="UTF-8"
            terminal="false"
            url="$INSTALL_PATH/WoPeD">
        <createForPack name="Executable"/>
    </shortcut>
    <shortcut
            name="WoPeD Manual"
            target="$INSTALL_PATH/doc/html/en/index.htm"
            commandLine=""
            workingDirectory="$INSTALL_PATH/doc/html"
            description="Browse the WoPeD User Manual"
            iconFile=""
            iconIndex="0"
            initialState="normal"
            programGroup="yes"
            desktop="yes"
            applications="no"
            startMenu="no"
            startup="no"
            url="$INSTALL_PATH/doc/html/en/index.htm"
            type="Link"
            encoding="UTF-8">
        <createForPack name="HTML Manual"/>
    </shortcut>
    <shortcut
            name="WoPeD Docs"
            target="$INSTALL_PATH\doc\pdf"
            commandLine=""
            workingDirectory="$INSTALL_PATH\doc\pdf"
            description="Browse the WoPeD PDF Documentation"
            iconFile=""
            iconIndex="0"
            initialState="normal"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no">
        <createForPack name="PDF Documentation"/>
    </shortcut>
</izpack:shortcuts>
